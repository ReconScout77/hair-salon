@{
  Layout = "_Layout";
}

<h2>Change name for @Model.GetName()</h2>

<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <div class="well">
      <div class="form">
        <form action="/stylists/@Model.GetId()/@Model.GetName()-clients/update" method="post">
          <label for="stylist-name">Change name to:</label>
          <br>
          <input type="text" name="stylist-name" id="stylist-name">
          <br>
          <button type="submit">Confirm change</button>
        </form>
      </div>
    </div>
  </div>
</div>

<a href="/"><button>Home</button></a>
<a href="/stylists/@Model.GetId()/@Model.GetName()-clients"><button>Back to client list for @Model.GetName()</button></a>
