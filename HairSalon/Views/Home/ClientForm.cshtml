@{
  Layout = "_Layout";
}

<h2>Add client for @Model.GetName()</h2>

<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <div class="well">
      <div class="form">
        <form action="/stylists/@Model.GetId()/@Model.GetName()-clients/new" method="post">
          <label for="client-name">Client name:</label>
          <br>
          <input type="text" name="client-name" id="client-name">
          <br>
          <button type="submit">Add!</button>
        </form>
      </div>
    </div>
  </div>
</div>


<a href="/stylists/@Model.GetId()/@Model.GetName()-clients"><button>Back to clients of @Model.GetName()</button></a>
<a href="/"><button>Home</button></a>
