@{
  Layout = "_Layout";
}

<h2>Add a Stylist</h2>

<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <div class="well">
      <div class="form">
        <form action="/stylists" method="post">
          <label for="stylist-name">Name:</label>
          <br>
          <input type="text" name="stylist-name" id="stylist-name">
          <br>
          <button type="submit">Add!</button>
        </form>
      </div>
    </div>
  </div>
</div>

<a href="/"><button>Home</button></a>
